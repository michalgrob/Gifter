<% layout('boilerplate') %>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    /* The Close Button */
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
    }
</style>

<div class="jumbotron">
    <div class="container text-center">
        <h1>MY FRIENDS EVENTS</h1>

    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Events List</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a href="/wishlist/createEvent" class="btn btn-sm btn-primary btn-create">Create A New Event</a>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <form method="get" action="/mallManager">
                                <button type="submit" class="btn btn-sm btn-primary btn-create"><i class="fa fa-refresh" aria-hidden="true"></i> Refresh</button>
                            </form>
                        </div>
                    </div>
                    <input type="text" id="searchInput" onkeyup="searchStores()" placeholder="Search for stores.." title="Type in a name" >
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th><em class="fa fa-cog"></em></th>
                            <!--<th class="hidden-xs">Store ID</th>-->
                            <th>Title</th>
                            <th>Description:</th>
                            <th>Date</th>
                            <th>Host</th>
                            <th>WishList</th>
                        </tr>
                        </thead>
                        <tbody id="stores_table_body">
                        <% for(var i = 0; i< events.length; i++){%>
                        <tr>
                            <th></th>
                            <th><%=events[i].title%></th>
                            <th> <%=events[i].description%></th>
                            <th><%=events[i].event_date%></th>
                            <th><%=events[i].host%></th>
                            <th><%=events[i].gifts.length%> wishlist<br>
                                <button id="myBtnGifts" onclick="showModal('myModalGifts<%=events[i].id%>')">Show Gifts</button>

                                <!-- The Modal -->
                                <div id='myModalGifts<%=events[i].id%>' class="modal">

                                    <!-- Modal content -->
                                    <div class="modal-content">
                                        <span class="close">&times;</span>
                                        <h4>Your WishList:</h4><br>
                                        <ul id='giftsList<%=events[i].id%>' class="w3-ul w3-card-4"style="width:70%; margin-left: 15%;">
                                            <% for (var k=0; k<events[i].gifts.length; k++){%>
                                           <li class="w3-padding-15">
                                                <img style="width:60px;" src='<%=events[i].gifts[k].ImageUrl %>' class="w3-left w3-circle w3-margin-right" alt="">

                                        <span class="w3-large">  <%= events[i].gifts[k].name %> </span>
                                        <span id='<%=events[i].id%>' name='<%=events[i].gifts[k].id%>' onclick="markAsMine(this)"class="w3-button w3-white w3-xlarge w3-right">
                                                    <i  style="margin-right: 0px;" class="fa fa-hand-o-up" aria-hidden="true"></i>
                                                </span>
                                        <span class="w3-large"><%= events[i].gifts[k].store_name %></span><br>
                                        <%= events[i].gifts[k].price %>
                                        </li>
                                        <%}%>
                                        </ul>
                                    </div>
                                </div>

                            </th>
                        </tr>
                        <%}%>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script  type="text/javascript">
    var modal;
    var span = document.getElementsByClassName("close")[0];

    function showModal(eventId) {
        modal = document.getElementById(eventId);

        modal.style.display = "block";

    }

    span.onclick = function() {
        modal.style.display = "none";
    }
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }


    function markAsMine(element) {
        // element.parentElement.style.display='none'
        var eventId = element.getAttribute("id");
        var giftId = element.getAttribute("name");


        $.ajax({
            type: "POST",
            dataType: "json",
            data: {
                giftId: giftId,
                eventId: eventId,
            },
            url: "/wishlist/markGift",
            success: function (data) {
                console.log("vv");
                console.log(data);
                ajaxUpdateCart(giftId);
            },
            error: function (err) {
                console.log(err);
                console.log("xx");
            }


        });
    }

    ////////copied from shopping cart
    function incQty() {
        var qty = parseInt($("#cartQty").text());
        $("#cartQty").text(qty+1);
        alert("gift added to cart successfully");


    }



    function ajaxUpdateCart(giftId) {
        $.ajax({
            type: "GET",
            url: "/shoppingCart/add-to-cart/"+giftId.toString(),
            //data: "game-name=" + GAME_NAME,
            success: function (status) {
                incQty();

            }

        })
    }
    var refreshRate = 20000; //mili seconds

    $(function() {
        //prevent IE from caching ajax calls
        $.ajaxSetup({cache: false});
        //The users list is refreshed automatically every second
        setInterval(ajaxEventsList, refreshRate);

    });

    function ajaxEventsList() {
        $.ajax({
            type: "GET",
            url: "/wishlist/refreshMyFriendsEventsGifts",
            success: function (data) {
                //incQty();
                updateAllGiftsLists(data);

            }
        })
    }

    function updateAllGiftsLists(events){
        for(var i=0;i<events.length; i++){
            updateEventGiftsList(events[i].id,events[i]);
        }
    }

    function updateEventGiftsList(eventId,event){
        var giftListId = 'giftsList'+eventId;
        $("#giftListId").empty();

         for (var k=0; k<event.gifts.length; k++){
             var newLi = document.createElement("li");
             newLi.setAttribute("class","w3-padding-15");

             var newImg =  document.createElement("img");
             newImg.setAttribute("style","width:60px;");
             var imgUrl = event.gifts[k].ImageUrl;
             newImg.setAttribute("src",imgUrl);
             newImg.setAttribute("class","w3-left w3-circle w3-margin-right");
             newLi.appendChild(newImg);

             var newSpan =  document.createElement("span");
             newSpan.setAttribute("style","width:60px;");
             newSpan.setAttribute("class","w3-large");
             newSpan.textContent = event.gifts[k].name+ 'newwww';
             newLi.appendChild(newSpan);

             var newI =  document.createElement("i");
             newI.setAttribute("style","margin-right: 0px;");
             newI.setAttribute("class","fa fa-hand-o-up");
             newI.setAttribute("aria-hidden","true");


             var newSpan2 =  document.createElement("span");
             newSpan2.setAttribute("id",eventId);
             newSpan2.setAttribute("name",event.gifts[k].id);
             newSpan2.setAttribute("class","w3-button w3-white w3-xlarge w3-right");
             newSpan2.setAttribute("onclick","markAsMine(this)");
             newSpan2.appendChild(newI);
             newLi.appendChild(newSpan2);

             var newSpan3 =  document.createElement("span");
             newSpan3.setAttribute("class","w3-large");
             newSpan3.textContent = event.gifts[k].store_name;
             newLi.appendChild(newSpan3);

             document.getElementById(giftListId);

         }


    }

</script>