<script>
    window.onload = loadStores();

    function  loadStores() {
        var table = '';
        var av_stores =[];
  /*
   <!--<- JSON.stringify(available_stores) >--> todo%
   */
        var rowsNumber = av_stores.length;
        for(var r = 0; r < rowsNumber; r++)
        {
            table+= '<tr id="row-' + r + '">';

            table+= '<td align="center">';
            table+= '<button type="button" onclick="editStore(' + r + ')" class="btn btn-default"><em class="fa fa-pencil"></em></button>';
            table+= '<button type="button" onclick="deleteStore(' + r + ')" class="btn btn-danger"><em class="fa fa-trash"></em></button>';
            table+= '</td>';
            table+= '<td class="hidden-xs" id="store_id_field">' + r + '</td>';
            table+= '<td id="store_name_field">' + av_stores[r].name + '</td>';
            table+= '<td id="store_manager_email_field">' + 'admin@super-pharm.co.il' + '</td>';
            table+= '<td id="store_location_field">' + av_stores[r].location + '</td>';

            table+= '</tr>';
        }
        var tbody = document.getElementById("stores_table_body");
        tbody.innerHTML = '<table>' + table + '</table>';
    }
