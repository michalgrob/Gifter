<% layout('boilerplate') %>

<div class="jumbotron">
    <div class="container text-center">
        <h1>MY EVENTS</h1>

    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Events List</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a href="/wishlist/createEvent" class="btn btn-sm btn-primary btn-create">Create A New Event</a>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <form method="get" action="/mallManager">
                                <button type="submit" class="btn btn-sm btn-primary btn-create"><i class="fa fa-refresh" aria-hidden="true"></i> Refresh</button>
                            </form>
                        </div>
                    </div>
                    <input type="text" id="searchInput" onkeyup="searchStores()" placeholder="Search for stores.." title="Type in a name" >
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th><em class="fa fa-cog"></em></th>
                            <!--<th class="hidden-xs">Store ID</th>-->
                            <th>Title</th>
                            <th>Description:</th>
                            <th>Date</th>
                            <th>Guests</th>
                            <th>WishList</th>
                        </tr>
                        </thead>
                        <tbody id="stores_table_body">
                        <% for(var i = 0; i< events.length; i++){%>
                        <tr>
                            <th></th>
                            <th><%=events[i].title%></th>
                            <th> <%=events[i].description%></th>
                            <th><%=events[i].event_date%></th>
                            <th><%=events[i].guests.length%>guest
                                <!--<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">-->
                                    <!--Launch demo modal-->
                                <!--</button>-->
                            </th>
                            <th><%=events[i].gifts.length%>wishlist</th>
                        </tr>
                        <%}%>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
