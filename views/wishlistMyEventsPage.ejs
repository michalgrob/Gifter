<% layout('boilerplate') %>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
</style>

<div class="jumbotron">
    <div class="container text-center">
        <h1>MY EVENTS</h1>

    </div>
</div>
<div id="mySidenav" class="sidenav" style="position: fixed">
    <!--<a href="#" id="about">About</a><br>-->
    <!--<a href="/wishlist/myEvents" id="myEventsSidenav">My Events</a><br><br><br>-->
    <a href="/wishlist/myFriendsEvents" id="myEventsSidenav">To My Friends Events</a><br>
    <!--<a href="#" id="contact">Contact</a>-->
</div>
<div class="container">

    <div class="row">

        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Events List</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a href="/wishlist/createEvent" class="btn btn-sm btn-primary btn-create">Create A New Event</a>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <form method="get" action="/mallManager">
                                <button type="submit" class="btn btn-sm btn-primary btn-create"><i class="fa fa-refresh" aria-hidden="true"></i> Refresh</button>
                            </form>
                        </div>
                    </div>
                    <input type="text" id="searchInput" onkeyup="searchStores()" placeholder="Search for stores.." title="Type in a name" >
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th><em class="fa fa-cog"></em></th>
                            <!--<th class="hidden-xs">Store ID</th>-->
                            <th>Title</th>
                            <th>Description:</th>
                            <th>Date</th>
                            <th>Guests</th>
                            <th>WishList</th>
                        </tr>
                        </thead>
                        <tbody id="stores_table_body">
                        <% for(var i = 0; i< events.length; i++){%>
                        <tr>
                            <th></th>
                            <th><%=events[i].title%></th>
                            <th> <%=events[i].description%></th>
                            <th><%=events[i].event_date%></th>
                            <th><%=events[i].guests.length%> guests <br>
                                <button id="myBtn" onclick="showModal('myModal<%=events[i].id%>')">Show Guests</button>

                                <!-- The Modal -->
                                <div id='myModal<%=events[i].id%>' class="modal">

                                    <!-- Modal content -->
                                    <div class="modal-content">
                                        <span class="close">&times;</span>
                                        <h4>Your Guests List:</h4><br>
                                        <p><% for (var j=0; j<events[i].guests.length; j++){%>
                                            <b>  <%= events[i].guests[j].username %> :</b> <%= events[i].guests[j].email %> <br>
                                            <%}%>
                                        </p>

                                    </div>

                                </div>

                            </th>
                            <th><%=events[i].gifts.length%> wishlist<br>
                                <button id="myBtnGifts" onclick="showModal('myModalGifts<%=events[i].id%>')">Show Gifts</button>

                                <!-- The Modal -->
                                <div id='myModalGifts<%=events[i].id%>' class="modal">

                                    <!-- Modal content -->
                                    <div class="modal-content">
                                        <span class="close">&times;</span>
                                        <h4>Your WishList:</h4><br>
                                        <ul class="w3-ul w3-card-4"style="width:70%; margin-left: 15%;">
                                            <% for (var k=0; k<events[i].gifts.length; k++){%>
                                            <li class="w3-padding-15">
                                                <img style="width:60px;" src='<%=events[i].gifts[k].ImageUrl %>' class="w3-left w3-circle w3-margin-right" alt="">

                                                <span class="w3-large">  <%= events[i].gifts[k].name %> </span><br>
                                                <span class="w3-large"><%= events[i].gifts[k].store_name %></span><br>
                                                <%= events[i].gifts[k].price %>
                                                <%if (events[i].gifts[k].isMarked == true){%>
                                                <i class="fa fa-check-circle-o" aria-hidden="true">someone bought it for u :)</i>
                                                <%}else{%>
                                                <i class="fa fa-gift" aria-hidden="true"></i>
                                                <%}%>
                                            </li>
                                        <%}%>
                                        </ul>
                                    </div>
                                </div>

                            </th>
                        </tr>
                        <%}%>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script  type="text/javascript">
    var modal;
    var span = document.getElementsByClassName("close")[0];

    function showModal(eventId) {
        modal = document.getElementById(eventId);

        modal.style.display = "block";

    }

    span.onclick = function() {
        modal.style.display = "none";
    }
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    //    $("#myModal").modal("show");
    //    $("#myModal").css("z-index", "1500");

</script>